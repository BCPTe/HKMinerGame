<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constt"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/constt"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sea_animate"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintTop_toTopOf="@id/constraint"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/island1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toTopOf="@id/constraint"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:layout_marginTop="310dp"
                app:layout_constraintHorizontal_bias="0.8"/>

            <ImageView
                android:id="@+id/island2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island1"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginStart="80dp" />

            <ImageView
                android:id="@+id/island3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island2"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="80dp" />

            <ImageView
                android:id="@+id/island4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island3"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginStart="120dp" />

            <ImageView
                android:id="@+id/island5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island4"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="80dp" />

            <ImageView
                android:id="@+id/island6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island5"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginStart="60dp" />

            <ImageView
                android:id="@+id/island7"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island6"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="110dp" />

            <ImageView
                android:id="@+id/island8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island7"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginStart="80dp" />

            <ImageView
                android:id="@+id/island9"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island8"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="80dp" />

            <ImageView
                android:id="@+id/island10"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/island"
                app:layout_constraintTop_toBottomOf="@id/island9"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:layout_marginTop="110dp"
                android:layout_marginStart="130dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sky"
        app:layout_constraintTop_toTopOf="@id/constt"
        android:scaleType="fitXY"/>

</androidx.constraintlayout.widget.ConstraintLayout>