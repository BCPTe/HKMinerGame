<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/splash_background"
        android:src="@drawable/splash_background"
        android:scaleType="fitXY" />
    
    <ImageView
        android:id="@+id/image_pb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentDescription="@string/pb_background"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/progress_bar500x60"
        android:scaleType="fitXY" />

    <ProgressBar
        android:id="@+id/pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/custom_progressbar"
        android:progress="0"
        android:layout_width="320dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"/>

    <TextView
        android:id="@+id/pb_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/komix_eighties"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:textAlignment="center"
        android:layout_alignBottom="@id/pb"
        android:layout_alignTop="@id/pb"
        android:layout_alignStart="@id/pb"
        android:layout_alignEnd="@id/pb"
        android:translationY="3dp" />


</RelativeLayout>